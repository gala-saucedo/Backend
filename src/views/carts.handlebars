<main>
    <h1>Carrito</h1>
    {{#if cart.products.length}}
        <ul>
            {{#each cart.products}}
            <li>
                <h3>{{this.title}}</h3>
                <p>Precio: ${{this.price}}</p>
                <p>Cantidad: {{this.quantity}}</p>
            </li>
            {{/each}}
        </ul>
    {{else}}
        <p>El carrito está vacío.</p>
    {{/if}}
</main>
